# Configuration file for Supabase self-hosting scripts
# Copy this to config.env and customize for your environment

# =============================================================================
# PATH CONFIGURATION
# =============================================================================
INSTALL_DIR="/opt/supabase"
BACKUP_DIR="/var/backups/supabase"
LOG_DIR="/var/log/supabase"

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_NOTIFICATION_EMAIL=""

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONTAINER_NAME="supabase-db"
DB_USER="postgres"
DB_NAME="postgres"

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_ENABLED=false
WEBHOOK_URL=""
SLACK_CHANNEL=""

# =============================================================================
# UPDATE CONFIGURATION
# =============================================================================
UPDATE_NOTIFICATION=true
HEALTH_CHECK_TIMEOUT=60

# =============================================================================
# CLOUD BACKUP CONFIGURATION
# =============================================================================
CLOUD_BACKUP_ENABLED=false
CLOUD_PROVIDER="rclone"  # Options: rclone, aws, gcp, azure, hetzner

# AWS S3 Configuration
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Hetzner Object Storage (S3-compatible)
HETZNER_S3_BUCKET=""
HETZNER_S3_ENDPOINT="https://fsn1.your-objectstorage.com"  # Replace with your endpoint
HETZNER_S3_REGION="fsn1"
HETZNER_ACCESS_KEY=""
HETZNER_SECRET_KEY=""

# Hetzner Storage Box (SFTP)
HETZNER_STORAGEBOX_HOST=""     # e.g., your-backup.your-storagebox.de
HETZNER_STORAGEBOX_USER=""     # Storage Box username
HETZNER_STORAGEBOX_PASS=""     # Storage Box password
HETZNER_STORAGEBOX_PATH="/backups/supabase"

# rclone Configuration (for OneDrive, Dropbox, etc.)
RCLONE_REMOTE_NAME="mycloud"
RCLONE_REMOTE_PATH="supabase-backups"

# Multiple cloud providers (comma-separated for redundancy)
MULTI_CLOUD_PROVIDERS=""  # e.g., "aws,onedrive,dropbox,hetzner"
MULTI_CLOUD_ENABLED=false

# Other cloud providers
GCP_BUCKET=""
AZURE_CONTAINER=""

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_ENABLED=true

# Email notifications
EMAIL_ENABLED=false
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM=""
SMTP_TO=""
SMTP_USE_TLS=true

# Slack notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL="#alerts"
SLACK_USERNAME="Supabase Monitor"

# Telegram notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# Discord notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=""

# Microsoft Teams notifications
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=""

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITOR_DISK_USAGE=true
DISK_USAGE_THRESHOLD=80

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_COMPOSE_FILE="docker-compose.yml"
COMPOSE_PROJECT_NAME="supabase"
